<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb" style="border-top:5px solid #e5e5e5">
    <div class="page-header pull-right">
        <div class="page-title">
        </div>
    </div>
    <div class="clearfix">
    </div>
</div>

<div class="page-content">
    <div id="tab-general">
        <div id="sum_box" class="row mbl">
            <div class="col-lg-12 col-sm-12 col-md-12">
                @using (Html.BeginForm("UploadFile", "Compras", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="archivo">Seleccione el archivo a procesar</label>
                        <input class="form-control" name="file" id="file" type="file">
                    </div>
                    <p>
                        <input type="submit" name="boton" value="PROCESAR" id="boton">
                    </p>
                }
            </div>
        </div>

        <div id="sum_box" class="row mbl">
            <div class="col-lg-12 col-sm-12 col-md-12">
                @if (@ViewBag.Alerts != null)
                {
                    <div style="overflow-y:scroll; height:400px;">
                        @foreach (var item in @ViewBag.Alerts)
                        {
                            <div class="alert alert-@item.Type dismissable" role="alert" style="margin-right:5px;">
                                <span>@item.Message</span>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>