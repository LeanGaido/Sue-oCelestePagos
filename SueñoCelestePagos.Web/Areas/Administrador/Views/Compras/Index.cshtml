@model PagedList.IPagedList<SueñoCelestePagos.Entities.CartonVendido>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    DateTime Hoy = DateTime.Today;
}

<!--BEGIN TITLE & BREADCRUMB PAGE-->
<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
    <div class="page-header pull-left">
        <div class="page-title">
            Sueño Celeste
        </div>
    </div>
    <ol class="breadcrumb page-breadcrumb pull-right">
        <li><i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Home")">Home</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li class="hidden"><a href="#"></a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li class="active">Principal</li>
    </ol>
    <div class="clearfix">
    </div>
</div>

<br />
<!--END TITLE & BREADCRUMB PAGE-->
<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb" style="border-left:5px solid #e5e5e5;border-top:5px solid #e5e5e5;border-right:5px solid #e5e5e5">
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            <div class="col-md-6">
                <select name="Año" id="Año" class="form-control">
                    @for (int año = 2019; año <= Hoy.Year + 1; año++)
                    {
                        if (ViewBag.Año == año)
                        {
                            <option selected value="@año">@año</option>
                        }
                        else
                        {
                            <option value="@año">@año</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        }
    </div>
    <div class="clearfix">
        <a class="btn btn-primary" href="@Url.Action("DebitarCuotas","Compras", new { Area = "Administrador" }, null)">Debitar Cuotas del Mes</a>
    </div>
</div>


<!--BEGIN CONTENT-->
<div class="page-content">
    <div id="tab-general">
        @if (Model.Count > 0)
        {
            <table class="table table-bordered navbar-inverse">
                <thead>
                    <tr>
                        <th>
                            Nro de Carton
                        </th>
                        <th>
                            Nombre del Cliente
                        </th>
                        <th>
                            Telefono
                        </th>
                        <th>
                            Fecha de la Compra
                        </th>
                        <th>
                            Forma de Pago
                        </th>
                        <th>
                            Estado del Pago
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var compra in Model)
                    {
                        <tr class="active">
                            <td>
                                @compra.Carton.Numero
                            </td>
                            <td>
                                @compra.Cliente.NombreCompleto
                            </td>
                            <td>
                                @compra.Cliente.Celular
                            </td>
                            <td>
                                @compra.FechaVenta
                            </td>
                            <td>
                                @compra.TipoDePago.Descripcion
                            </td>
                            <td>
                                @if (!compra.PagoCancelado)
                                {
                                    if (compra.PagoRealizdo)
                                    {
                                        <span>Pagado</span>
                                    }
                                    else
                                    {
                                        <span>Pago Pendiente</span>
                                    }
                                }
                                else
                                {
                                    <span>Pago Cancelado</span>
                                }
                            </td>
                            <td>
                                @*@Html.ActionLink("Ver Mas", "Details", new { Area = "Administrador", id = compra.ID, page = Model.PageNumber }, null) |*@
                                @Html.ActionLink("Ver Pagos", "Pagos", new { Area = "Administrador", id = compra.ID, page = Model.PageNumber }, null)
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr></tr>
                </tfoot>
            </table>

            <div class="text-center">
                Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

                @Html.PagedListPager(Model, page => Url.Action("Index",
                    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
            </div>
        }
        else
        {
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="text-center">Su Busqueda no dio Resultados</h3>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!--END CONTENT-->