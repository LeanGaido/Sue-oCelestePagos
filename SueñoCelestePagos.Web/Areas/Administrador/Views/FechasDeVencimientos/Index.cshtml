@model PagedList.IPagedList<SueñoCelestePagos.Entities.FechaDeVencimiento>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}


<!--BEGIN TITLE & BREADCRUMB PAGE-->
<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
    <div class="page-header pull-left">
        <div class="page-title">
            Sueño Celeste
        </div>
    </div>
    <ol class="breadcrumb page-breadcrumb pull-right">
        <li><i class="fa fa-home"></i>&nbsp;<a href="@Url.Action("Index","Home")">Home</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li class="hidden"><a href="#"></a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
        <li class="active">Principal</li>
    </ol>
    <div class="clearfix">
    </div>
</div>
<!--END TITLE & BREADCRUMB PAGE-->

<br />
<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb" style="border-left:5px solid #e5e5e5;border-top:5px solid #e5e5e5;border-right:5px solid #e5e5e5">
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            <div class="col-md-6">
                <input type="text" name="searchString" id="searchString" class="form-control" value="@ViewBag.CurrentFilter " />
            </div>
            <div class="col-md-2">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        }
    </div>
    <div class="clearfix">
    </div>
</div>

<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb" style="border-top:5px solid #e5e5e5">
    <div class="page-header pull-right">
        <div class="page-title">
            <a href="@Url.Action("Create", "FechasDeVencimientos")" class="btn btn-primary">Agregar Nueva Fecha De Vencimiento</a>
        </div>
    </div>
    <div class="clearfix">
    </div>
</div>

<!--BEGIN CONTENT-->
<div class="page-content">
    <div id="tab-general">
        @if (Model.Count() > 0)
        {
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Mes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Año)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().PrimerVencimiento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().SegundoVencimiento)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Año)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrimerVencimiento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SegundoVencimiento)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }

            </table>

            <div class="text-center">
                Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

                @Html.PagedListPager(Model, page => Url.Action("Index",
                    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
            </div>
        }
        else
        {
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="text-center">Su Busqueda no dio Resultados</h3>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!--END CONTENT-->


<p>
    @Html.ActionLink("Create New", "Create")
</p>
